extends layout
include mixins

block content

    div.flex-container
        div.category-container
            h1= message.title

            form(class="pure-form pure-form-stacked")
                fieldset
                    label(for="title") Title:
                    input#title(type="text", name="title" value=message.title)
                    
                    label(for="body") Body:
                    textarea#body(name="body", cols="30", rows="10")= message.body

                    label(for="links") Links:
                    +convertLinks(message.links)
                                                            
                    div(class="pure-button button-success", onClick="patchMessage(\"" + message._id + "\")") Save Changes
                    div(class="pure-button button-danger", onClick="removeMessage(\"" + message._id + "\")") Delete message